<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#D8CACA"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity"
    android:gravity="center">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Name"
                android:textColor="#111"
                android:textSize="18dp"/>

            <EditText
                android:id="@+id/id_name_edit_text"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:hint="Enter Your Name"
                android:textAlignment="center"
                android:textColor="#CF4242"
                android:textSize="16dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Designation"
                android:textColor="#111"
                android:textSize="18dp"/>

            <EditText
                android:id="@+id/id_designation_edit_text"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:hint="Enter Your Designation"
                android:textAlignment="center"
                android:textColor="#CF4242"
                android:textSize="16dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Salary"
                android:textColor="#111"
                android:textSize="18dp"/>

            <EditText
                android:id="@+id/id_salary_edit_text"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:hint="Enter Your Salary"
                android:textAlignment="center"
                android:textColor="#CF4242"
                android:textSize="16dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Experience"
                android:textColor="#111"
                android:textSize="18dp"/>

            <EditText
                android:id="@+id/id_experience_edit_text"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:hint="Enter Your Experience"
                android:textAlignment="center"
                android:textColor="#CF4242"
                android:textSize="16dp"/>
        </TableRow>

        <Button
            android:id="@+id/submit_button"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="submit"
            android:textSize="24dp"/>
    </TableLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#EC9207"
        android:id="@+id/textview1"
        android:layout_margin="10dp"
        android:textStyle="italic"/>
    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="#78CE15"
        android:id="@+id/textview2"/>
</LinearLayout>